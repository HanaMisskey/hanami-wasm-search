{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "Bundler",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "verbatimModuleSyntax": true,
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/*"],
        },
    },
    "include": [
        "src",
        "test"
    ],
}